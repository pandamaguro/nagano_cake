<% provide(:title, "注文履歴詳細") %>
<h2>注文履歴詳細</h2>
<% if @order.present? %>
	<strong>注文情報</strong>
  <table class="table table-bordered table-condensed">
    <tbody>
      <tr>
        <th>注文日</th>
  	    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.postal_code %><br>
      	  <%= @order.address %><br>
      	  <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </tbody>
  </table>
  <strong>請求情報</strong>
	<table class="table table-bordered table-condensed">
    <tr>
      <th>商品合計</th>
      <td><%= total_price(@order_details).to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <th>ご請求金額</th>
      <td><%= @order.total_payment.to_s(:delimited) %>円</td>
    </tr>
  </table>
	<strong>注文内容</strong>
  <table class="table table-striped table-bordered table-condensed">
  	<thead>
	    <tr>
	    	<th>商品</th>
	      <th>単価(税込)</th>
	    	<th>個数</th>
	    	<th>小計</th>
	    </tr>
  	</thead>
  	<tbody>
  	<% @order_details.each do |order_detail| %>
      <tr>
		    <td><%= order_detail.item.name %></td>
		    <td><%= order_detail.item.tax_in_price.to_s(:delimited) %>円</td>
		    <td><%= order_detail.count %></td>
		    <td><%= order_detail.tax_in_price.to_s(:delimited) %>円</td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to "注文履歴一覧へ戻る", orders_path, class: "btn btn-info btn-lg order-index-back" %>
<% else %>
  <p>注文履歴がありません。</p>
<% end %>
