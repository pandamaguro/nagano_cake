<% provide(:title, "商品編集") %>
<div class="container">
  <h2 class="text-center my-5">商品編集</h2>
  <div class="row">
    <div class="col-8 offset-2 mb-5">
      <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <%= f.label :商品画像, class:"form_label"%>
            <%= f.attachment_field :image,class:"mb-3 ml-3"%>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :商品名, class:"form_label" %>
            <%= f.text_field :name, placeholder:"商品名",class:"form-control mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :商品説明, class:"form_label" %>
            <%= f.text_area :introduction, size: "50x5", placeholder:"ここに説明文を記述します",class:"form-control form-control-lg mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :ジャンル, class:"form_label" %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--",class:"form-select" %>
          </div>
        </tr>
        <tr>
        <div class="form-group">
          <%= f.label :税抜価格,class:"form_label" %>
          <%= f.text_field :price,size:"15"%>円
        </div>
        </tr>
        <tr>
        <div class="form-group">
          <%= f.label :販売ステータス,class:"form_label my-3" %>
          <%= f.radio_button :is_active, true, checked: true %>
            <%= f.label :is_active, "販売中",class:"form_label" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中",class:"form_label" %>
          </td>
        </div>
        </tr>
        <tr>
        <div class="form-action d-flex justify-content-around">
          <%= f.submit "変更を保存", class:"btn btn-success" %>
          <%= link_to "商品詳細へ戻る",admin_item_path, class:"btn btn-outline-secondary" %>
        </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>